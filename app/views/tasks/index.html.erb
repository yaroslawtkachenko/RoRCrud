<div>
  <% if user_signed_in? %>
      <span>Здравствуйте, <%= current_user.email %></span>
      <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>

      <%= link_to 'New task', new_task_path %>
      <% @tasks.each do |task| %>
          <div>
            <p><%= t('name') %>:
              <%= task.name %>
              <%= t('descript') %>:
            <%= task.description %>
              <%= t('status') %>:
              <%= task.done %></p>
            <p><%= t('import') %>:
            <%= task.importance %>
            <%= task.expiry %></p>
            <%= link_to t('update'), edit_task_path(id: task.id), method: :get%>
            <%= link_to t('delete'), delete_task_path(id: task.id), method: :delete %>
          </div>
      <% end %>

  <% else %>
      <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
  <% end %>

</div>

